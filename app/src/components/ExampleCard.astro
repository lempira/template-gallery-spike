---
import type { Example } from "../types/example";

interface Props {
  example: Example;
}

const { example } = Astro.props;
const { id, title, description, image, tags } = example;
---

<article
  class="card bg-base-100 shadow-xl hover:-translate-y-1 transition-transform"
>
  <a href={`/${example.id}`}>
    <figure class="relative">
      <img src={image} alt={title} class="w-full h-48 object-cover" />
    </figure>
    <div class="card-body max-h-[200px] overflow-hidden">
      <h3 class="card-title truncate">{title}</h3>
      <p class="line-clamp-3">{description}</p>
      {
        tags && (
          <div class="card-actions justify-start mt-2">
            {tags.map((tag) => (
              <div class="badge badge-primary">{tag}</div>
            ))}
          </div>
        )
      }
    </div>
  </a>
</article>
